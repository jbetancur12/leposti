{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "name": "order",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "estado": {
      "type": "enumeration",
      "enum": [
        "paid",
        "unpaid"
      ],
      "required": true
    },
    "total": {
      "type": "integer",
      "required": true
    },
    "contenido": {
      "type": "richtext",
      "required": true
    },
    "provider": {
      "model": "provider",
      "via": "orders"
    },
    "product": {
      "model": "product",
      "via": "orders"
    },
    "user": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "orders"
    },
    "fechaPublicacion": {
      "type": "date",
      "required": true
    },
    "sePublico": {
      "type": "boolean",
      "default": false
    },
    "ejemplar": {
      "type": "boolean",
      "default": false,
      "required": true
    }
  }
}
